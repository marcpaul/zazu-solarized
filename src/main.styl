primary = #073642
inputColor = #fdf6e3
resultColor = #93a1a1
blue = #268bd2
orange = #cb4b16
magenta = #d33682

html
body
  margin 0
  padding 0
  font-size 20px
  font-family 'Roboto', 'Helvetica Neue', 'Sans Unicode', 'Lucida Grande', sans-serif
  background-color primary
  border-radius 2px

section#zazu
  background-color darken(primary, 5%)
  -webkit-app-region drag
  cursor move

  input
    font-weight 300
    outline none
    font-size 30px
    width 500px
    padding 12px
    border 0
    background-color transparent
    -webkit-app-region no-drag
    cursor auto
    color magenta !important

  iframe#preview
    border 0
    background-color #2aa198

  div.results
    display flex
    flex-direction row

    ul
      padding 0
      margin 0
      border-top 1px solid darken(primary, 10%)
      max-height 333px
      overflow hidden
      width 50%

      &:last-child
        width 100%

      & + div
        width 50%

      li
        display block
        height 45px
        line-height 45px
        border-bottom 1px solid darken(primary, 10%)
        -webkit-app-region no-drag
        cursor pointer
        width 100%

        .icon
          color resultColor
          text-align center
          line-height 30px
          height 30px
          width 30px
          margin 7.5px
          float left
          opacity 0.85

        h2, h3
          margin 0
          padding-left 10px
          color resultColor
          white-space nowrap
          overflow hidden
          text-overflow ellipsis
          font-weight 300
          font-family 'Roboto', 'Helvetica Neue', 'Sans Unicode', 'Lucida Grande', sans-serif

        h2
          font-size 20px
          line-height 25px
          &:last-child
            font-size 20px
            line-height 45px

        h3
          font-size 15px
          line-height 15px

        &.active
          -webkit-tap-highlight-color: rgba(0,0,0,0);
          background-color lighten(primary, 8%)
          color blue
          h2, h3
            color blue
        &:hover
          -webkit-tap-highlight-color: rgba(0,0,0,0);
          background-color lighten(primary, 8%)
          color blue
